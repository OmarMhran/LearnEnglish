<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/learn_nav_graph"
    app:startDestination="@id/learnFragment">

    <fragment
        android:id="@+id/learnFragment"
        android:name="com.example.learnenglish.ui.home.fragments.LearnFragment"
        android:label="fragment_learn"
        tools:layout="@layout/fragment_learn" >
        <action
            android:id="@+id/action_learnFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_learnFragment_to_lessonFragment"
            app:destination="@id/lessonFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/lessonFragment"
        android:name="com.example.learnenglish.ui.home.fragments.LessonFragment"
        android:label="fragment_lesson"
        tools:layout="@layout/fragment_lesson">
        <argument
            android:name="lesson"
            app:argType="com.example.learnenglish.data.model.Lesson" />
    </fragment>
</navigation>